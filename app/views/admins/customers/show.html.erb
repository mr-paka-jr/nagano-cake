<div class="container">
  <div class="row">
    <div class="col-xs-offset-1">
      <h4><%= @customer.last_name + @customer.first_name %>さんの会員詳細</h4>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th scope="row">顧客ID</th>
            <td>
              <%= @customer.id %>

            </td>
          </tr>
          <tr>
            <th scope="row">氏名</th>
            <td><%= @customer.last_name + " " + @customer.first_name %></td>
          </tr>
          <tr>
            <th scope="row">フリガナ</th>
            <td><%= @customer.last_name_kana + " " + @customer.first_name_kana %></td>
          </tr>
          <tr>
            <th scope="row">郵便番号</th>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <th scope="row">住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th scope="row">電話番号</th>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <th scope="row">メールアドレス</th>
            <td><%= @customer.email%></td>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to "編集する", edit_admins_customer_path(@customer), class: "btn btn-primary ml-1" %>
        <%= link_to "注文履歴一覧を見る", admins_orders_path, class: "btn btn-primary ml-1" %>
      </div>
    </div>
  </div>
</div>