<div class="container">
  <div class="row">
    <h4 class="col-xs-2 col-xs-offset-1 text-center bg-info">注文履歴一覧</h4>
  </div><br>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <table class="table">
        <thead>
          <tr class="bg-info">
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td>
              <%= link_to admins_order_path(order) do %>
                <%= order.created_at.to_s(:datetime_jp) %>
              <% end %>
            </td>
            <td>
              <%= order.customer.last_name + order.customer.first_name %>
            </td>
            <td><%= order.total_amounts %></td>
            <td><%= order.status %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="text-center">
        <%= paginate @orders %>
      </div>      
    </div>
  </div>
</div>