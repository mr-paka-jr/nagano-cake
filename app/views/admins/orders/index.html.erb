<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <h4>注文履歴一覧</h4>
      <table class="table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td>
              <%= link_to admins_order_path(order) do %>
                <%= customer.created_at %>
              <% end %>
            </td>
            <td>
              <%= order.customer.last_name + opder.customer.first_name %>
            </td>
            <td><%= ordertotal_amounts %></td>
            <td><%= order.status %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
        <%= paginate @orders %>
    </div>
  </div>
</div>