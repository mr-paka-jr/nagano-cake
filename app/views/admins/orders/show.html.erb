<div class="container">
  <div class="row">
    <div class="col-xs-2" style="margin-bottom: 50px;">
      <h4>注文履歴詳細</h4>
    </div>
  </div>
  <div class="row" style="margin-bottom: 10px;">
    <strong class="col-xs-2">購入者</strong>
    <div class="col-xs-10">
      <%= link_to admins_customer_path(@order.customer) do %>
        <%= @order.customer.last_name + @order.customer.first_name %>
      <% end %>
      </div>
  </div>
  <div class="row" style="margin-bottom: 10px;">
    <strong class="col-xs-2">配送先</strong>
    <div class="col-xs-10">
      <%= @order.postal_code %>
      <%= @order.address %>
      <%= @order.name %>
    </div>
  </div>
  <div class="row" style="margin-bottom: 10px;">
    <strong class="col-xs-2">支払方法</strong>
    <div class="col-xs-10">
      <%= @order.payment_method %>
    </div>
  </div>
  <div class="row" style="margin-bottom: 50px;">
    <strong class="col-xs-2">注文ステータス</strong>
    <div class="form-inline col-xs-10">
      <%= form_with model: [:admins, @order], local: true do |f| %>
        <%= f.select :status, Order.statuses.keys.map{|k| [k,k]} %>
        <%= f.submit "更新", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-8">
      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.price %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.price * order_detail.amount %></td>
            <%= form_with model: [:admins, order_detail], local: true do |f| %>
            <td>
              <%= f.select :making_status, OrderDetail.making_statuses.keys.map{|k| [k,k]} %>
            </td>
            <td>
              <%= f.submit "更新", class: "btn btn-success" %>
            </td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-xs-4" style="margin-top: 170px;">
        <strong class="col-sm-7">商品合計</strong>
        <span class="col-sm-5"><%= @total_price %>円</span>
        <strong class="col-sm-7">送料</strong>
        <span class="col-sm-5"><%= @order.shipping_cost %>円</span>
        <strong class="col-sm-7">請求金額合計</strong>
        <span class="col-sm-5"><%= @order.total_payment %>円</span>
    </div>
  </div>
</div>