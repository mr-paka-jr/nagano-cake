<div class="container">
  <div class="row">
    <div class="col-xs-2">
      <h4>注文履歴詳細</h4>
    </div>
  </div>
  <div class="row">
    <stong class="col-xs-2">購入者</stong>
    <div class="col-xs-10">
      <%= link_to admins_customer_path(@order) do %>
        <%= @order.customer.last_name + @order.customer.first_name %>
      <% end %>
      </div>
  </div>
  <div class="row">
    <strong class="col-xs-2">配送先</strong>
    <div class="col-xs-10">
      <%= @order.postal_code %>
      <%= @order.address %>
      <%= @order.name %>
    </div>
  </div>
  <div class="row">
    <stong class="col-xs-2">支払方法</stong>
    <div class="col-xs-10">
      <%= @order.payment_method %>
    </div>
  </div>
  <div class="row">
    <stong class="col-xs-2">注文ステータス</stong>
    <div class="form-inline col-xs-10">
      <%= form_with model: [:admins, @order], local: true do |f| %>
        <%= f.select :status, [['入金待ち',0],['入金確認',1],['製作中',2],['発送準備中',3],['発送済み',4]] %>
        <%= f.submit "更新", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <table class="table col-xs-9">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= @order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= order_detail.price %></td>
          <td><%= order_detail.amount %></td>
          <td>?</td>
          <%= form_with model: [:admins, @order], local: true do |f| %>
          <td>
            <%= f.select :status, [['着手不可',0],['製作待ち',1],['製作中',2],['制作完了',3]] %>
          </td>
          <td>
            <%= f.submit "更新", class: "btn btn-success" %>
          </td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="col-xs-3">
      <div class="row">
        <strong class="col-sm-7">商品合計</strong>
        <span class="col-sm-5">????円</span>
      </div>
      <div class="row">
        <strong class="col-sm-7">送料</strong>
        <span class="col-sm-5"><%= @order.shipping_cost %>円</span>
      </div>
      <div class="row">
        <strong class="col-sm-7">請求金額合計</strong>
        <span class="col-sm-5"><%= @order.total_payment %>円</span>
      </div>
    </div>
  </div>
</div>