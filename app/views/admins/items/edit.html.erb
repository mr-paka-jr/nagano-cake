<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <h3>商品新規登録</h3>
      <% if @item.errors.any?%>
        <h4>全ての項目を入力してください</h4>
        <ul>
          <% @item.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <div class="row">
        <%= form_with model: [:admins, @item], local: true do |f| %>
          <div class="col-xs-5">
            <%= attachment_image_tag @item, :image, :fill, 350, 300, format: 'jpeg' %>
            <%= f.attachment_field :image %>
          </div>
          <div class="col-xs-5">
            <table>
              <tr class="">
                <th>商品名</th>
                <td><%= f.text_field :name %></td>
              </tr>
              <tr class="">
                <th>商品説明</th>
                <td><%= f.text_area :introduction %></td>
              </tr>
              <tr class="">
                <th>ジャンル</th>
                <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--" %></td>
              </tr>
              <tr class="">
                <th>税抜価格</th>
                <td><%= f.text_field :price %>円</td>
              </tr>
              <tr class="">
                <th>販売<br>ステータス</br></th>
                <td><%= f.select :is_active, [['販売中',true],['販売停止中',false]], include_blank: "--選択してください--" %></td>
              </tr>
            </table>
            <div class="pull-right">
              <%= f.submit "変更を保存", class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>