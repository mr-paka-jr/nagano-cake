<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <h4>商品一覧</h4>
      <%= link_to image_tag('plus_icon.jpeg',:width => "50",:height => "50", class: "pull-right"), new_admins_item_path %>
      <table class="table">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td>
              <%= link_to admins_item_path(item) do%>
                <%= item.name %>
              <% end %>
            </td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td><%= item.is_active ? '販売中' : '販売停止中' %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="text-center">
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>