<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <h3>商品詳細</h3>

      <div class="row">
          <div class="col-xs-5">
            <%= attachment_image_tag @item, :image　%>
          </div>
          <div class="col-xs-5">
            <table>
              <tr class="">
                <th>商品名</th>
                <td><%= @item.name %></td>
              </tr>
              <tr class="">
                <th>商品説明</th>
                <td><%= @item.introduction %></td>
              </tr>
              <tr class="">
                <th>ジャンル</th>
                <td><%= @item.genre.name %></td>
              </tr>
              <tr class="">
                <th>税抜価格</th>
                <td><%= @item.price %>円</td>
              </tr>
              <tr class="">
                <th>販売<br>ステータス</br></th>
                <td><%= @item.is_active ? '販売中' : '販売停止中' %></td>
              </tr>
            </table>
            <div class="col-xs-offset-11">
              <%= link_to "編集する", edit_admins_item(@item), class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>