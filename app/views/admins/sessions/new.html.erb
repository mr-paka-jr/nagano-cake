<div class="container">
 <div class="row">
  <div class="col-xs-offset-1 col-xs-11">
    <h4 class="head-line col-sm-4">管理者ログイン</h4><br>

　　　<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  　　　　<div class="field form-group col-xs-8">
         <%= f.label :"メールアドレス", class: "col-sm-4" %>
         <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-8" %>
        </div>

        <div class="field form-group col-xs-8">
         <%= f.label :パスワード, class: "col-sm-4 control-label" %>
         <%= f.password_field :password, autocomplete: "current-password", class: "col-sm-8" %>
        </div>

        <div class="field form-group col-xs-6">
         <%= f.submit "ログイン",class: "btn btn-primary pull-right btn-lg" %>
        </div>
      <% end %>
  </div>
 </div>
</div>


