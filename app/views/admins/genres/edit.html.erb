<div class="container">
    <div class="row">
        <div class="col-lg-5">
            <div class="text-center p-3 mb-2 bg-secondary text-black"><h4><strong>ジャンル編集</strong></h4></div><br>
            <div class="edit_genre">
                <%= form_with model: @genre, url: admins_genre_path, local:true do |f| %>
                    <span><strong>ジャンル</strong></span>
                    <%= f.text_field :name %>
                        <%= f.radio_button :is_active, :true %>
                        <%= f.label :is_active,"有効", value: :true %>
                        <%= f.radio_button :is_active, :false %>
                        <%= f.label :is_active,"無効", value: :false %>
                    <%= f.submit '変更を保存する', class: "btn btn-info" %>
                <% end %>
            </div>
        </div>
    </div>
</div>