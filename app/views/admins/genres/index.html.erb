
<div class="container">
    <div class="row">
        <div class="col-xs-5">
            <div class="bg-info text-center"><h4><strong>ジャンル一覧・追加</strong></h4></div><br>
            <div class="text-center col-xs-12">
                <%= form_with model: @genre, url: "/admins/genres", local:true do |f| %>
                    <span><strong>ジャンル</strong></span>
                    <%= f.text_field :name %>
                    <%= f.radio_button :is_active, :true %>
                    <%= f.label :is_active,"有効", value: :true %>
                    <%= f.radio_button :is_active, :false %>
                    <%= f.label :is_active,"無効", value: :false %>
                    <%= f.submit '追加', class: "btn btn-info" %>
                <% end %>
            </div><br>
            <table class="table table-default genres_table"><br>
                <thead><br>
                    <tr class="bg-info">
                        <th>ジャンル</th>
                        <th>状態</th>
                        <th></th>
                        <th colspan="3"></th>
                      </tr>
                </thead>
                <tbody>
                    <% @genres.each do |genre| %>
                    <tr>
                        <td><%= genre.name %></td>
                        <td><%= genre.is_active == true ? "有効" : "無効" %></td>
                        <td><br></td>
                        <td><br></td>
                        <td><%= link_to "編集する", edit_admins_genre_path(genre.id), class: "btn btn-primary" %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>