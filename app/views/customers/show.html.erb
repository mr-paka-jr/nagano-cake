<div class="container">
    <div class="row">
        <div class="col-xs-4">
            <h4 class="text-center">マイページ</h4><br>
            <div>
                <span><strong>登録情報</strong></span>
                <%= link_to "編集する", edit_customer_path(current_customer), class: "btn btn-primary" %>
                <%= link_to "パスワードを変更する", customer_path, class: "btn btn-primary" %>
            </div><br>

            <table class="table table-bordered">
                <tr>
                    <td class="table-active">氏名</td>
                    <td>
                        <%= @customer.last_name %>
                        <%= @customer.first_name %>
                    </td>
                </tr>

                <tr>
                    <td class="table-active">カナ</td>
                    <td>
                        <%= @customer.last_name_kana %>
                        <%= @customer.first_name_kana %>
                    </td>
                </tr>

                <tr>
                    <td class="table-active">郵便番号</td>
                    <td><%= @customer.postal_code %></td>
                </tr>

                <tr>
                    <td class="table-active">住所</td>
                    <td><%= @customer.address %></td>
                </tr>

                <tr>
                    <td class="table-active">電話番号</td>
                    <td><%= @customer.telephone_number %></td>
                </tr>

                <tr>
                    <td class="table-active">メールアドレス</td>
                    <td><%= @customer.email %></td>
                    <td><%= @customer.is_deleted %></td>
                </tr>
            </table><br>

            <div class="text-left">
            <span><strong>配送先</strong></span>
            <%= link_to "一覧を見る", customers_addresses_path, class: "btn btn-primary" %>
            </div><br>
            <div class="text-left">
            <span><strong>注文履歴</strong></span>
            <%= link_to "一覧を見る", customers_orders_path, class: "btn btn-primary" %>
            </div>

        </div>
    </div>
</div>