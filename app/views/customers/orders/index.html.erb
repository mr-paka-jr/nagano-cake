<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <h3 class="bg-info text-center head-line col-sm-3">注文履歴一覧</h3><br>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th class="info">注文日</th>
                        <th class="info">配送先</th>
                        <th class="info">注文商品</th>
                        <th class="info">支払金額</th>
                        <th class="info">ステータス</th>
                        <th class="info">注文詳細</th>
                    </tr>
                </thead>
                <tbody>
                    <% @orders.each do |order| %>
                        <tr>
                            <td style="width:15%"><strong><%= order.created_at.strftime('%Y/%m/%d') %></strong></td>
                            <td>
                                <%= order.postal_code %><br>
                                <%= order.address %><br>
                                <%= order.name %>
                            </td>
                            <td style="width:15%">
                                <% order_details = order.order_details %>
                                <% order_details.each do |o| %>
                                    <%= o.item.name %><br>
                                <% end %>
                            </td>
                            <td style="width:8%"><strong><%= order.total_payment %>円</strong></td>
                            <td style="width:8%"><strong><%= order.status %></strong></td>
                            <td style="width:8%"><%= link_to "表示する",customers_order_path(order.id), class: "btn btn-primary" %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>