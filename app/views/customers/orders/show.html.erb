<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <div class="col-xs-9">
                <div class="col-xs-5 text-center">
                    <h3 class="head-line bg-info">注文履歴詳細</h3><br>
                </div>
                <div class="col-xs-8">
                    <table class="table table-hover table-bordered">
                        <p><strong>注文情報</strong></p>
                        <tr>
                            <td class="bg-info" style="width:15%">注文日</td>
                            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
                        </tr>
                        <tr>
                            <td class="bg-info">配送先</td>
                            <td><%= @order.address %></td>
                        </tr>                
                        <tr>
                            <td class="bg-info">支払い方法</td>
                            <td><%= @order.payment_method %></td>
                        </tr>                
                        <tr>
                            <td class="bg-info">ステータス</td>
                            <td><%= @order.status %></td>
                        </tr>
                    </table>
                </div>
                <div class="col-xs-4">
                    <table class="table table-hover table-bordered">
                        <p><strong>請求情報</strong></p>
                        <tr>
                            <td class="bg-info">商品合計</td>
                            <td><%= (@order.total_payment - @order.shipping_cost) %></td>
                        </tr>
                        <tr>
                            <td class="bg-info">配送料</td>
                            <td><%= @order.shipping_cost %></td>
                        </tr>
                        <tr>
                            <td class="bg-info"><strong>ご請求額</strong></td>
                            <td><%= @order.total_payment %></td>
                        </tr>
                    </table>
                </div>
                <div class="col-xs-11">
                    <table class="table table-hover table-bordered">
                        <p><strong>注文内容</strong></p>
                        <thead>
                            <tr>
                                <th class="bg-info" style="width:65%">商品</th>
                                <th class="bg-info">単価(税込み)</th>
                                <th class="bg-info">個数</th>
                                <th class="bg-info">小計</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @order_details.each do |order_detail| %>
                                <tr>
                                    <td><%= order_detail.item.name %></td>
                                    <td><%= order_detail.price %></td>
                                    <td><%= order_detail.amount %></td>
                                    <td><%= (order_detail.price * order_detail.amount)%></td>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>