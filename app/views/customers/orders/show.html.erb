<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <div class="col-xs-9">
                <div class="col-xs-6">
                    <h3 class="head-line col-sm-3">注文履歴一覧</h3>
                    <table class=" tabel table-hover table-bordered">
                        <p><strong>注文情報</strong></p>
                        <tr>
                            <td>注文日</td>
                            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
                        </tr>
                        <tr>
                            <td>配送先</td>
                            <td><%= @order.address %></td>
                        </tr>                
                        <tr>
                            <td>支払い方法</td>
                            <td><%= @order.payment_method %></td>
                        </tr>                
                        <tr>
                            <td>ステータス</td>
                            <!--表示が０になっているのでenumの使い方調べて修正必要-->
                            <td><%= @order.status %></td>
                        </tr>
                    </table>
                </div>
                <div class="col-xs-3">
                    <h3 class="head-line col-sm-3">請求情報</h3>
                    <table class=" tabel table-hover table-bordered">
                        <tr>
                            <td>商品合計</td>
                            <td><%= @order.total_payment %></td>
                        </tr>
                        <tr>
                            <td>配送料</td>
                            <td><%= @order.shipping_cost %></td>
                        </tr>
                        <tr>
                            <td><strong>ご請求額</strong></td>
                            <td><%= @order.total_payment %></td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="col-xs-8">
                <table class="tabel table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>商品</th>
                            <th>単価(税込み)</th>
                            <th>個数</th>
                            <th>小計</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @order_details.each do |order_detail| %>
                            <tr>
                                <td><%= order_detail.item.name %></td>
                                <td><%= order_detail.price %></td>
                                <td><%= order_detail.amount %></td>
                                <td><%= (order_detail.price * order_detail.amount)%></td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>