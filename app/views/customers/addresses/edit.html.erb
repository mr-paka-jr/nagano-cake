<div class="container">
 <div class="row">
    <div class="col-xs-12">
        <h3 class="head-line col-sm-3">配送先編集</h3>

        <%= form_with(model: @address, url:customers_address_path, local: true ,method: :patch) do |f| %>

            <div class="addres col-xs-10">
                <div class="form-group col-xs-12">
                    <%= f.label :"郵便番号(ハイフンなし)",class: "col-xs-3" %>
                    <%= f.text_field :postal_code ,class: "col-xs-2" %>
                </div>

                <div class="form-group col-xs-12">
                    <%= f.label :"住所" ,class: "col-xs-3" %>
                    <%= f.text_field :address ,class: "col-xs-9" %>
                </div>

                <div class="form-group col-xs-12">
                    <%= f.label :"宛名" ,class: "col-xs-3" %>
                    <%= f.text_field :name ,class: "col-xs-4" %>
                </div>
                <div class="form-group col-xs-12">
                    <%= f.submit '編集する' ,class: "col-xs-2 btn btn-primary btn-lg pull-right" %>
                </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>