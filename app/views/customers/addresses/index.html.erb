<div class="container">
  <div class="row">
    <div class="col-xs-12">
        <h3 class="head-line col-sm-7">配送先登録/一覧</h3>

        <%= form_with(model: @address, :url => {:controller => "customers/addresses"}) do |f| %>
            <div class="addres col-xs-10">
                <div class="form-group col-xs-12">
                    <%= f.label :"郵便番号(ハイフンなし)" ,class: "col-xs-3" %>
                    <%= f.text_field :postal_code, class: "col-xs-4" %>
                </div>

                <div class="form-group col-xs-12">
                    <%= f.label :"住所" ,class: "col-xs-3" %>
                    <%= f.text_field :address, class: "col-xs-7" %>
                </div>

                <div class="form-group col-xs-12">
                    <%= f.label :"宛名" ,class: "col-xs-3" %>
                    <%= f.text_field :name, class: "col-xs-4" %>
                </div>
                    <%= f.submit '登録する' ,class: "col-xs-2 pull-right btn-sm btn-success " %>
            </div>
        <% end %>
        <table class="table addesses">
         <thead>
          <tr class="address">
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
          </tr>
        </thead>
        <% @addresses.each do |address| %>
        <tbody>
          <tr>
            <td>
              <%= address.postal_code %>
            </td>
            <td>
              <%= address.address %>
            </td>
            <td>
              <%= address.name %>
            </td>
            <td>
                <%= link_to "編集する",edit_customers_address_path(address), class: " btn-sm btn-primary" %>
            </td>
            <td>
                <%= link_to "削除する",customers_address_path(address), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: " btn-sm btn-danger destroy_book_#{address.id}" %>
            </td>
          </tr>
        </tbody>
        <% end %>
     </table>
    </div>
  </div>
</div>
