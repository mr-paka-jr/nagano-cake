<div class="container">
  <div class="row">
    <div class="col-xs-offset-1 col-xs-11">
      <h3 class="head-line col-sm-8">新規会員登録</h3>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "customers/shared/error_messages", resource: resource %>
        <div class="field form-group col-xs-12"></br>
          <%= f.label :"名前", class: "col-sm-3" %>
          <%= f.label :"(姓)", class: "col-sm-1" %>
          <%= f.text_field :last_name, autofocus: true, class: "col-sm-3" %>
          <%= f.label :"(名)", class: "col-sm-1" %>
          <%= f.text_field :first_name, autofocus: true, class: "col-sm-3" %>
        </div>

        <div class="field form-group col-xs-12">
          <%= f.label :"フリガナ", class: "col-sm-3" %>
          <%= f.label :"(セイ)", class: "col-sm-1" %>
          <%= f.text_field :last_name_kana, autofocus: true, class: "col-sm-3" %>
          <%= f.label :"(メイ)", class: "col-sm-1 control-label" %>
          <%= f.text_field :first_name_kana, autofocus: true, class: "col-sm-3" %>
        </div>

        <div class="field from-group col-xs-12">
          <%= f.label :"メールアドレス",class: "col-sm-4" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-3" %>
        </div>

        <div class="field form-group col-xs-12"></br>
          <%= f.label :"郵便番号（ハイフンなし）", autofocus: true, class: "col-sm-4" %>
          <%= f.text_field :postal_code, class: "col-sm-3" %>
        </div>

        <div class="field form-group col-xs-12">
          <%= f.label :"住所", class: "col-sm-4" %>
          <%= f.text_field :address, autofocus: true, class: "col-sm-7"  %>
        </div>

        <div class="field form-group col-xs-12">
          <%= f.label :"電話番号（ハイフンなし）", class: "col-sm-4" %>
          <%= f.text_field :telephone_number, class: "col-sm-3" %>
        </div>

        <div class="field form-group col-xs-12">
        <%= f.label :"パスワード(6文字以上)", class: "col-sm-4" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "col-sm-3" %>
      </div>

      <div class="field form-group col-xs-12">
        <%= f.label :"パスワード(確認用)", class: "col-sm-4" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-sm-3" %>
      </div>

      <div class="actions col-xs-7">
        <%= f.submit "新規登録",class: 'btn btn-success btn-lg col-sm-8' %>
      </div>

      <div class="col-xs-9">
      　　<h4 class="head-line col-sm-4">既に登録済みの方</h4></br>
      　　<p class="new-link ">
      　　<%#下記リンク修正必要%>
       　　 <%= link_to "こちら", new_session_path(resource_name), data: {"turbolinks" => false}, class: "btn-link" %>からログインしてください。
      　　</p>
    　</div>
    <% end %>
   </div>
  </div>
</div>
