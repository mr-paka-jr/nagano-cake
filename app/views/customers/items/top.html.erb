<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<table class="table table-bordered">
		        <thead><th class="text-center">ジャンル検索</th></thead>
		        <tbody>
	  				<td>
	  					<% @genres.each do |genre| %>
	  				  		<p class="genre-search"><%= link_to genre.name,customers_items_path %><br></p>
	  					<% end %>
	  				</td>
				</tbody>
			</table>
		</div>
		<div class="main-visual col-xs-12">
			<p class="welcome">
			  ようこそ NaganoCakeへ！<br>
			  このサイトは、ケーキ販売のECサイトになります。<br>
			  会員でない方も商品の閲覧はできますが、<br>
			  購入には会員登録が必要になります。<br>
			</p>
		</div>
		<div class="row">
			<div class="col-xs-9">
				<h3 class="recommended"> オススメ商品</h3><br>
				<div class="d-flex">
					<% @items.first(4). each do |item| %>
						<div class="top-recommended">
						<%= link_to customers_item_path(item.id), class: "btn-link", :style=>"color:#0099FF;" do %>
							<div id="img_field" class="top-item">
								<%= attachment_image_tag(item, :image, size: "180x130", fallback: "no_image.jpg") %>
							</div>
							<p class="top-items-name"><%= item.name %></p>
							<p class="top-items-price">¥ <%= addTax(item.price) %></p>
						</div>
						<% end %>
					<% end %>
				</div>	
				<%= link_to "もっと見る>", customers_items_path, class: "btn-link  pull-right" %>
			</div>
		</div>
	</div>
</div>
